{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": false,
        "esModuleInterop": true,
        "lib": ["DOM","ES2015","ESNext", "ES2015.Generator"],
        "moduleResolution": "node",
        "module": "CommonJS",
        "outDir": "dist",
        "downlevelIteration": true,
        "noImplicitAny": true,
        "baseUrl": "./",
    },
    "ts-node": {
        "compilerOptions": {
            "esModuleInterop": true,
            "downlevelIteration": true
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*.ts",
        "../../packages/pipe/src"
    ]
}